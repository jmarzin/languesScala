# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                              controllers.Application.index
GET         /themes/$codeL<\w\w>/list                      controllers.Themes.list(codeL: String, page: Int ?= 1)
GET         /themes/$codeL<\w\w>/new                       controllers.Themes.newTheme(codeL: String)
GET         /themes/$codeL<\w\w>/api/v1/date_themes        controllers.Themes.apiV1DateThemes(codeL: String)
GET         /themes/$codeL<\w\w>/api/v1/themes             controllers.Themes.apiV1Themes(codeL: String)
POST        /themes/$codeL<\w\w>                           controllers.Themes.save(codeL: String)
GET         /themes/:id                                    controllers.Themes.show(id: Long)
POST        /themes/:id                                    controllers.Themes.update(id: Long)
PUT         /themes/:id                                    controllers.Themes.update(id: Long)
GET         /themes/:id/edit                               controllers.Themes.edit(id: Long)
GET         /themes/:id/supp                               controllers.Themes.delete(id: Long)
GET         /admin                                         controllers.Admins.password
POST        /admin                                         controllers.Admins.checkPassword
GET         /admin/charge                                  controllers.Admins.charge
GET         /mots/$codeL<\w\w>/list                        controllers.Words.list(codeL: String, page: Int ?= 1, recherche: String ?= "")
GET         /mots/$codeL<\w\w>/new                         controllers.Words.newWord(codeL: String)
GET         /mots/$codeL<\w\w>/api/v1/date_mots            controllers.Words.apiV1DateWords(codeL: String)
GET         /mots/$codeL<\w\w>/api/v1/mots                 controllers.Words.apiV1Words(codeL: String)
POST        /mots/$codeL<\w\w>                             controllers.Words.save(codeL: String)
GET         /mots/:id                                      controllers.Words.show(id: Long)
POST        /mots/:id                                      controllers.Words.update(id: Long)
PUT         /mots/:id                                      controllers.Words.update(id: Long)
GET         /mots/:id/edit                                 controllers.Words.edit(id: Long)
GET         /mots/:id/supp                                 controllers.Words.delete(id: Long)
GET         /verbes/list                                   controllers.Verbs.list
GET         /langue/:langue                                controllers.Themes.changeLanguage(langue: String)
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                  controllers.Assets.at(path="/public", file)

    