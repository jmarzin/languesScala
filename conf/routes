# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                        controllers.Application.index
GET         /themes/$codeL<\D\D>/list                controllers.Themes.list(codeL: String, page: Int ?= 1)
GET         /themes/$codeL<\D\D>/new                 controllers.Themes.newTheme(codeL: String)
GET         /$codeL<\D\D>/api/v1/date_themes         controllers.Themes.apiV1DateThemes(codeL: String)
GET         /$codeL<\D\D>/api/v1/themes              controllers.Themes.apiV1Themes(codeL: String)
POST        /themes/$codeL<\D\D>                     controllers.Themes.save(codeL: String)
GET         /themes/:id                              controllers.Themes.show(id: Long)
POST        /themes/:id                              controllers.Themes.update(id: Long)
PUT         /themes/:id                              controllers.Themes.update(id: Long)
GET         /themes/:id/edit                         controllers.Themes.edit(id: Long)
GET         /themes/:id/supp                         controllers.Themes.delete(id: Long)
GET         /typesformes/$codeL<\D\D>/list           controllers.FormsTypes.list(codeL: String, page: Int ?= 1)
GET         /typesformes/$codeL<\D\D>/new            controllers.FormsTypes.newFormType(codeL: String)
POST        /typesformes/$codeL<\D\D>                controllers.FormsTypes.save(codeL: String)
GET         /typesformes/:id                         controllers.FormsTypes.show(id: Long)
POST        /typesformes/:id                         controllers.FormsTypes.update(id: Long)
PUT         /typesformes/:id                         controllers.FormsTypes.update(id: Long)
GET         /typesformes/:id/edit                    controllers.FormsTypes.edit(id: Long)
GET         /typesformes/:id/supp                    controllers.FormsTypes.delete(id: Long)
GET         /admin                                   controllers.Admins.password
POST        /admin                                   controllers.Admins.checkPassword
GET         /admin/$codeL<\D\D>/charge_mots          controllers.Admins.chargeWords(codeL: String)
GET         /admin/$codeL<\D\D>/charge_verbes        controllers.Admins.chargeVerbs(codeL: String)
GET         /admin/charge_fichier                    controllers.Admins.showUploadForm()
POST        /admin/charge_fichier                    controllers.Admins.upload2()
GET         /mots/$codeL<\D\D>/list/:page            controllers.Words.list(codeL: String, page: Int, recherche: String ?= "")
GET         /mots/$codeL<\D\D>/new                   controllers.Words.newWord(codeL: String)
GET         /$codeL<\D\D>/api/v1/date_mots           controllers.Words.apiV1DateWords(codeL: String)
GET         /$codeL<\D\D>/api/v1/mots                controllers.Words.apiV1Words(codeL: String)
POST        /mots/$codeL<\D\D>                       controllers.Words.save(codeL: String)
GET         /mots/:id                                controllers.Words.show(id: Long)
POST        /mots/:id                                controllers.Words.update(id: Long)
PUT         /mots/:id                                controllers.Words.update(id: Long)
GET         /mots/:id/edit                           controllers.Words.edit(id: Long)
GET         /mots/:id/supp                           controllers.Words.delete(id: Long)
GET         /verbes/$codeL<\D\D>/list                controllers.Verbs.list(codeL: String, page: Int ?= 1)
GET         /verbes/$codeL<\D\D>/new                 controllers.Verbs.newVerb(codeL: String)
GET         /$codeL<\D\D>/api/v1/date_verbes         controllers.Verbs.apiV1DateVerbs(codeL: String)
GET         /$codeL<\D\D>/api/v1/verbes              controllers.Verbs.apiV1Verbs(codeL: String)
GET         /$codeL<\D\D>/api/v1/date_formes         controllers.Verbs.apiV1DateForms(codeL: String)
GET         /$codeL<\D\D>/api/v1/formes              controllers.Verbs.apiV1Forms(codeL: String)
POST        /verbes/$codeL<\D\D>                     controllers.Verbs.save(codeL: String)
GET         /verbes/:id                              controllers.Verbs.show(id: Long)
POST        /verbes/:id                              controllers.Verbs.update(id: Long)
PUT         /verbes/:id                              controllers.Verbs.update(id: Long)
GET         /verbes/:id/edit                         controllers.Verbs.edit(id: Long)
GET         /verbes/:id/supp                         controllers.Verbs.delete(id: Long)
GET         /langue/:langue                          controllers.Themes.changeLanguage(langue: String)
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                            controllers.Assets.at(path="/public", file)

    